package 创业;

public class xfz extends Thread{
	String name;
	cup c ;
	public xfz(String name, cup c) {
		super();
		this.name = name;
		this.c = c;
	}
	
	@Override
	public void run() {
		// TODO Auto-generated method stub
		xf();
	}
	
	void xf(){
		while(true){
//			if(c.empty==false){
//				c.setEmpty(true);
//				try {
//					synchronized (c) {
//						c.wait();
//					}
//					
//				} catch (InterruptedException e) {
//					// TODO Auto-generated catch block
//					e.printStackTrace();
//				}
//			}else{
//				c.notifyAll();
//			}
			
			if(c.empty == true){
				synchronized (c) {
					try {
						c.wait();
					} catch (InterruptedException e) {
						// TODO Auto-generated catch block
						e.printStackTrace();
					}
				}
				
			}else{
				c.setEmpty(true);
				System.out.println(name+"刚刚对着这杯咖啡一饮而尽");
				c.notifyAll();
			}
			
		}
		
	}
}
