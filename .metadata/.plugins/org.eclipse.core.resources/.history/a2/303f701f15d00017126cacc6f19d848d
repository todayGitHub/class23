			System.out.println("重要的事情说三遍");
//			y++;
		}
	
		
		
//		System.out.println("~~~~~~~~~~~~~~~~~~~~~~~~~~");
	
//		for (;; ) {
//			System.out.println("重要的事情说三遍");
//			
//		}
		

		
		for(int sum = 0,x = 1;x<=100;x++){
			sum = sum+x;
			
		}
		
	}
}
